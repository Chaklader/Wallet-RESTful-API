.page_container {
    width: auto;
    height: auto;
    background-color: lightblue;
}

.wallet_page {
    background-color:lightgreen;
    border: 1px solid darkgreen;
    border-radius: 3px;
    height: 450px;
    margin: 100px auto;
    min-height: 200px;
    min-width: 300px;
    width: 800px;
    padding: 10px;
}

.top_section {
    width: 100%;
    height: 50px;
}

.balance_box {
    float: left;
    width: 500px;
}

.balance_row {
    float: none;
    width: 100%;
}

.balance_row .fild_label {
    float: left;
    font-size: 21px;
    font-weight: bold;
    width: 100px;
    font-family: arial;
}

.balance_row .fild_value {
    font-family: arial;
    float: left;
    font-size: 21px;
    font-weight: bold;
    color: grey;
}

.address_row {
    float: left;
    width: 100%;
    color: blue;
}

.buttons_box {
    float: right;
    color: lightseagreen;
}

.history_section {
    border: 1px dotted black;
    border-radius: 3px;
    font-size: 13px;
    height: 350px;
    margin-top: 9px;
    overflow-y: auto;
    padding: 10px;
    width: 100%;
}

.btc-col {
    float: left;
    font-size: 18px;
    margin-left: -9px;
    min-width: 50px;
    padding-top: 4px;
}

#send-form .col-sm-2 {
    width: 45px;
}

#send-form .col-sm-10 {
    width: 550px;
}

.status_line {
    padding-top: 5px;
    color: gray;
}